<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.eti.pg.pkm.improvedpkmapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".drawers.StreamDrawer"
            android:label="@string/title_stream"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".drawers.AlgorithmsDrawer"
            android:label="@string/title_algorithms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".drawers.ControlDrawer"
            android:label="@string/title_control"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>